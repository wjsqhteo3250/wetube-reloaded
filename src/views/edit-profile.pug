extends base

block content
    if errorMessage 
        span= errorMessage
    form(method="post" enctype="multipart/form-data").edit-profile__form
        label(for="avatar") Avatar
        input(type="file" id="avatar" name="avatar" accept="image/*")
        input(type="text" placeholder="name" name="name" value=loggedInUser.name required)
        input(type="email" placeholder="email" name="email" value=loggedInUser.email required)
        input(type="text" placeholder="username" name="username" value=loggedInUser.username required)
        input(type="text" placeholder="Location" name="location" value=loggedInUser.location required)
        input(type="submit" value="Update Profile")
        if !loggedInUser.socialOnly
            div.edit-profile-password
                a(href="change-password") Change Password &rarr;