extends base

block content 
    div#videoContainer
        video(src="/" + video.fileUrl)
        div#videoControls
            div.timeLineBox
                input(type="range" step="1" value = 0 min="0")#timeLine
            div.controls
                div.controlBox.controlBox-left
                    button#play
                        i.fas.fa-play
                    div 
                        span#currentTime 00:00
                        span  / 
                        span#totalTime 00:00
                div.controlBox.controlBox-right
                    button#mute
                        i.fas.fa-volume-up
                    input(type="range" step="0.1" value = 0.5 min="0" max="1")#volume
                    div
                        button#fullScreen
                            i.fas.fa-expand


    //-
        div
            p= video.description
            small= video.createdAt
        div
            small Uploaded by 
                a(href=`/users/${video.owner._id}`)= video.owner.username
        if(loggedInUser)
            if(String(loggedInUser._id) === String(video.owner._id))
                a(href=`${video.id}/edit`) Edit Video &rarr;
                br
                form(method="post" action=`${video.id}/delete`)
                    input(type="submit" value="Delete Video")
                //- a(href=`${video.id}/delete`) Delete Video &rarr;
block scripts
    script(src="/static/js/videoPlayer.js") 
