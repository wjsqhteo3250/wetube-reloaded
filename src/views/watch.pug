extends base

block content 
    video(src="/" + video.fileUrl controls)
    div
        p= video.description
        small= video.createdAt
    a(href=`${video.id}/edit`) Edit Video &rarr;
    br
    form(method="post" action=`${video.id}/delete`)
        input(type="submit" value="Delete Video")
